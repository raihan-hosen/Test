#include<stdio.h>
int main() {
    float salary, new_salary, earned, percent;
    scanf("%f", &salary);
    if (salary>=0 && salary<=400.00) {
        earned = salary* 0.15;
        new_salary = salary + earned;
        percent = 15;
        printf("Novo salario: %.2f\n", new_salary);
        printf("Reajuste ganho: %.2f\n", earned);
        printf("Em percentual: %.0f %%\n", percent);
    }
    else if (salary>=400.01 && salary<=800.00) {
        earned = salary* 0.12;
        new_salary = salary + earned;
        percent = 12;
        printf("Novo salario: %.2f\n", new_salary);
        printf("Reajuste ganho: %.2f\n", earned);
        printf("Em percentual: %.0f %%\n", percent);
    }
    else if (salary>=800.01 && salary<=1200.00) {
        earned = salary* 0.10;
        new_salary = salary + earned;
        percent = 10;
        printf("Novo salario: %.2f\n", new_salary);
        printf("Reajuste ganho: %.2f\n", earned);
        printf("Em percentual: %.0f %%\n", percent);
    }
    else if (salary>=1200.01 && salary<=2000.00) {
        earned = salary* 0.07;
        new_salary = salary + earned;
        percent = 7;
        printf("Novo salario: %.2f\n", new_salary);
        printf("Reajuste ganho: %.2f\n", earned);
        printf("Em percentual: %.0f %%\n", percent);
    }
    else if (salary>2000.00) {
        earned = salary* 0.04;
        new_salary = salary + earned;
        percent = 4;
        printf("Novo salario: %.2f\n", new_salary);
        printf("Reajuste ganho: %.2f\n", earned);
        printf("Em percentual: %.0f %%\n", percent);
    }
      return 0;  
}
